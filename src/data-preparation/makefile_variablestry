#Define rules

all: data_sets pre_clean merge
data_sets: ../../datasets/BLM2020_dataset.csv ../../datasets/BLM2021_dataset.csv
pre_clean: ../../gen/data-preparation/temp/BLM2020_dataset.csv ../../gen/data-preparation/temp/BLM2021_dataset.csv
merge: ../../gen/data-preparation/merging.csv

INPUT_DIR = src/data-preparation
DOWN_DATA = datasets/
GEN_DATA = gen/data-preparation/temp

$(DOWN_DATA)/BLM2020_dataset.csv $(DOWN_DATA)/datasets/BLM2021_dataset.csv:
	$(INPUT_DIR)/download_data.R


$(GEN_DATA)/BLM2020_dataset.csv $(GEN_DATA)/BLM2021_dataset.csv: $(DOWN_DATA)/BLM2020_dataset.csv $(DOWN_DATA)/datasets/BLM2021_dataset.csv
	$(INPUT_DIR)/preclean.R


../../gen/data-preparation/merging.csv : $(GEN_DATA)/BLM2020_dataset.csv $(GEN_DATA)/BLM2021_dataset.csv
	$(INPUT_DIR)/merging.R
